{%  extends 'bot/albums/_base_album_landscape.jinja2' %}

{% block head %}
<meta charset="UTF-8">
<title>{% block title %}{% if baby %}{{ baby.first_name|capitalize }}. {% endif %}Первый Альбом{% endblock %}</title>
<link href="https://fonts.googleapis.com/css?family=Caveat|Neucha|Comfortaa&display=swap" rel="stylesheet">
<link href="/static/icons/css/iconpack_01.css" rel="stylesheet" />
    {% block css %}
    <style>

    body{
        background-image: url("/static/img/albums/1/bg.jpg");
        background-position: right;
    }

    .page {
        padding: 30px 15px; position: relative;
        font-family: Comfortaa;
    }

    .women .month, .women .height, .women .weight , .women .color{color: #ff619d;}
    .men .month, .men .height, .men .weight , .men .color{color: #55c6ff;}

    .page-num-center{ text-align: center; font-size: 10px; padding: 20px; }

    .data div{ font-size: 22px!important; text-align: center}
    .data .first_name{ font-size: 30px!important;}
    .subpage{ width: 400px; margin: 0 auto; background-color: rgba(255, 255, 255, 0.4);
        padding: 20px; border-radius: 10px;
    }
    .month{text-align: center; font-size: 20px;}
    .text{background-color: rgba(255, 255, 255, 0.9); padding: 10px; max-width: 300px; margin: 10px;
        border-radius: 15px 15px 15px 0px}
    .text .date{font-size: 10px; margin-bottom: 10px;}

    .photo-wrap{height: 200px; width: 200px; border-radius: 10px; margin: 10px auto;}
    .title{background-color: rgba(255, 255, 255, 0.9);
        padding: 10px; width: auto; max-width: 200px; margin: 0px 10px 10px 180px; font-size: 10px;
        display: inline-block;
        border-radius: 0px 15px 15px 15px}

    .height{margin: 10px 10px 10px 100px;}
    .height-icon{display: inline-block; font-size: 40px;}
    .height-date{font-size: 12px}
    .weight{margin: 10px 10px 10px 100px;}
    .weight-icon{display: inline-block; font-size: 40px; }
    .weight-date{font-size: 12px}

    </style>

    {% endblock %}
{% endblock %}

{% block first_page %}
    <div class="page">
        <div class="subpage home">
                <div class="data">
                    <div class="font neucha" style="font-size: 1cm; color: #76b1d5;">Альбом младенца. Бот</div>
                    <div class="font neucha" style="font-size: 1cm; color: #7c7c7c; margin-top: 10px">Просмотр</div>
                    <div class="font neucha" style="font-size: 1cm; color: #7c7c7c">структуры альбома</div>
                </div>
        </div>
    </div>
    <div class="page">
        <div class="subpage home">
                <div class="data">
                    <div class="font neucha" style="font-size: 1cm; color: #7c7c7c">{{ baby.birth_date|date('j E Y') }} года</div>
                    <div class="font neucha" style="font-size: 1cm; color: #7c7c7c">наконец {% if baby.is_women %}родилась{% else %}родился{% endif %}</div>
                    <div class="font neucha" style="font-size: 1cm; color: #7c7c7c">наш{% if baby.is_women %}а{% endif %}</div>
                    <div class="font neucha first_name color" style="font-size: 3cm;">{{ baby.first_name }}</div>
                    <div class="font neucha" style="font-size: 1cm; color: #7c7c7c">и</div>
                    <div class="font neucha" style="font-size: 1cm; color: #7c7c7c">это {% if baby.is_women %}её{% else %}его{% endif %}</div>
                    <div class="font neucha" style="font-size: 1cm; color: #7c7c7c">Первый Альбом</div>
                </div>
        </div>
    </div>
{% endblock first_page %}

{% block not_baby %}
    <div class="page">
        <div class="subpage home">
                <div class="data">
                    <div class="font neucha" style="font-size: 1cm; color: #76b1d5;">Альбом младенца. Бот</div>
                    <div class="font neucha" style="color: #76b1d5; margin-top: 20px"><span style="font-size: 50px" class="icon-camera-alt"></span></div>
                    <div class="font neucha" style="font-size: 1cm; color: #7c7c7c; margin-top: 20px">Альбом</div>
                    <div class="font neucha" style="font-size: 1cm; color: #7c7c7c">ещё не создан</div>
                </div>
        </div>
    </div>
    <div class="page">
    <div class="subpage home">
                <div class="data" style="line-height: 30px">
                    <div class="font neucha" style="font-size: 1cm; color: #7c7c7c">Чтобы создать альбом</div>
                    <div class="font neucha" style="font-size: 1cm; color: #7c7c7c">&mdash;</div>
                    <div class="font neucha" style="font-size: 1cm; color: #7c7c7c">перейдите в группу</div>
                    <div class="font neucha" style="font-size: 1cm; color: #76b1d5;"><a style="color: #76b1d5;" href="https://vk.com/ibabybot">Альбом младенца. Бот</a></div>
                    <div class="font neucha" style="font-size: 1cm; color: #7c7c7c">и напишите боту <span class="icon-emo-happy"></span></div>
                </div>
            </div>
    </div>
{% endblock %}